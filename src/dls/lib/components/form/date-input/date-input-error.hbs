<fieldset class="fieldset fieldset-select-date has-error">
  <legend id="legend-select-date-error" class="fieldset-label">Date label</legend>

  <div class="form-group">
    <div class="form-field">
      <label for="select-id-error-1" class="form-label access">Day</label>

      <div class="form-field-select">
        <select
          class="form-control"
          id="select-id-error-1"
          aria-invalid="true"
          aria-labelledby="legend-select-date-error select-date-error"
        >
          <option>Day</option>
          <option>01</option>
          <option>...</option>
          <option>31</option>
        </select>

        <i class="icon icon-chevron-down" aria-hidden="true"></i>
      </div>
    </div>

    <div class="form-field">
      <label for="select-id-error-2" class="form-label access">Month</label>

      <div class="form-field-select">
        <select
          class="form-control"
          id="select-id-error-2"
          aria-invalid="true"
          aria-labelledby="legend-select-date-error select-date-error"
        >
          <option>Month</option>
          <option>January</option>
          <option>...</option>
          <option>December</option>
        </select>

        <i class="icon icon-chevron-down" aria-hidden="true"></i>
      </div>
    </div>

    <div class="form-field">
      <label for="select-id-error-3" class="form-label access">Year</label>

      <div class="form-field-select">
        <select
          class="form-control"
          id="select-id-error-3"
          aria-invalid="true"
          aria-labelledby="legend-select-date-error select-date-error"
        >
          <option>Year</option>
          <option>1918</option>
          <option>...</option>
          <option>2018</option>
        </select>

        <i class="icon icon-chevron-down" aria-hidden="true"></i>
      </div>
    </div>
  </div>

  <div id="select-date-error" class="form-validation-error">
    <p>This field contains an error.</p>
  </div>
</fieldset>
